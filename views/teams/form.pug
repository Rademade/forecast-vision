extends ../layouts/index

block content
    div.controll
        a(href="/members") Back to teams list

    h1 Team edit

    form(action=submitUrl method="post")
        div
            label() Team name
            input(type="input" name="name" value=team.name)

        input(type="submit" value="Save")

    h3 Members
    ul
        each member in members
            li()
                span #{member.name}
                a(href="/members/" + member.id) Edit