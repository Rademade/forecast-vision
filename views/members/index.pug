extends ../layouts/index

block content

    div
        div.actions
            a(href="/members/form") Add new member

        table(border="1")
            tr
                td Member name
                td Team
                td Toggl id
                td Forecast id
                td peopleHR id
                td Actual utilization
                td Actions
            each member in members
                tr()
                    td() #{member.name}
                    td() #{member.team ? member.team.name : ""}
                    td() #{member.togglId}
                    td() #{member.forecastId}
                    td() #{member.peopleHRId}
                    td() #{member.actualUtilization} %
                    td()
                        a(href="/members/" + member.id) Edit
                        span(class="item-delete" data-url="/members/" + member.id) Delete
